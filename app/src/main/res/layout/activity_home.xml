<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/popupMenuBackground"
    tools:context=".HomeActivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="59dp"
        android:src="@drawable/gifproducts" />

    <TextView
        android:id="@+id/name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOpenProductsActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="Popular Products"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardExit"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true">



    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btnOpenProductsActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View All Products"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="433dp"
        android:background="@drawable/background"
        app:srcCompat="@android:drawable/stat_sys_speakerphone" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name"
        android:layout_marginStart="12dp"
        android:layout_marginTop="419dp"
        android:layout_toEndOf="@+id/imageView2"
        android:text="+42123132149"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/btnOpenFavActivity"
        android:layout_marginTop="-589dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btnOpenFavActivity"
        android:layout_width="68dp"
        android:layout_height="56dp"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="257dp"
        android:layout_marginTop="-58dp"
        android:layout_toEndOf="@+id/imageView2"
        android:text="Button"
        app:icon="@drawable/ic_heart_filled" />


</RelativeLayout>




